@model Projeto_MVC_DIO.Models.Contato

@{
    ViewData["Title"] = "Editar Contato";
}

<h1>
    Editar Contato
</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" placeholder="Digite seu nome aqui" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label">Telefone</label>
                <input asp-for="Telefone" placeholder="Digite seu telefone" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" placeholder="Digite um email válido" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label">Ativo</label>
                <input type="checkbox" asp-for="Ativo" class="form-check-input" />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Voltar</a>
            </div>
        </form>
    </div>
</div>
